<div class="container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <div class="d-flex flex-row bd-highlight mb-1">
      <div class="p-1 bd-highlight">
        <% if task.completed  %>
          <i class="fas fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
      </div>
      <div class="p-1 bd-highlight">
        <p><%= link_to task.title, task_path(task) %></p>
      </div>
      <div class="p-1 bd-highlight">
        <p><%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete?" } do %>
            <i class="fas fa-dumpster-fire"></i>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
  <hr>
  <%= link_to new_task_path do %>
    <p><i class="fas fa-plus"></i> Create a new task</p>
  <% end %>

</div>
