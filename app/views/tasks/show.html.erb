<div class="container">
  <%= link_to "edit this task", edit_task_path(@task), class: "btn btn-light my-2 float-right" %>
  <br>
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <hr>
  <% if @task.completed %>
    <p><i class="fas fa-check-square"></i> This task has been completed</p>
  <% else %>
    <p><i class="far fa-square"></i> This task has not been completed</p>
  <% end %>
  <hr>
  <%= link_to 'Back to List', tasks_path %>
</div>
